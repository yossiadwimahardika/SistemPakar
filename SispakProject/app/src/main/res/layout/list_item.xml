<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apakah diluar ada kehidupan lain?"
                android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/idGejala"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:textColor="@color/black"
                    />


                <RadioGroup
                    android:id="@+id/mainLinearLayoutButton"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    >

                        <RadioButton
                            android:id="@+id/btn0.3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kurang Yakin"
                            android:textColor="@color/black"
                            android:paddingRight="10dp"/>

                        <RadioButton
                            android:id="@+id/btn0.6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Cukup Yakin"
                            android:textColor="@color/black"
                            android:paddingRight="10dp"/>

                        <RadioButton
                            android:id="@+id/btn1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sangat Yakin"
                            android:textColor="@color/black"
                            android:paddingRight="10dp"/>


                </RadioGroup>

            <TextView
                android:id="@+id/hasil"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/black"
                android:visibility="gone"/>


        </LinearLayout>




    </LinearLayout>

</LinearLayout>